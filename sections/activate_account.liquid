<div class="padding-global padding-section-large">
          <div class="container-large">
            <div class="login_tabs">
              <div class="login_form w-form">
                <h1 li-settings:text="Activate Account" class="heading-style-h2 text-align-center">{{ section.settings.text_activate_account }}</h1>
                <form id="email-form" name="email-form" data-name="Email Form" method="get" li-form="activate_customer_password" class="form_form" data-wf-page-id="68e5827dc33ba2f819dc5576" data-wf-element-id="76a9ef2d-868c-0ff6-6c81-e850978114e8">
                  {% if form.errors %}<div li-if="form.errors" class="form_error-message">
                    <div li-object="form.errors | default_errors" class="text-size-regular text-color-red text-align-center">{{ form.errors | default_errors }}</div>
                  </div>{% endif %}
                  <div class="form_field-wrapper"><label for="field-3" class="form_hidden-label">Password</label><input class="form_input w-input" maxlength="256" name="field-3" data-name="Field 3" placeholder="Password" li-attribute:name="customer[password]" type="password" id="field-3" required=""></div>
                  <div class="form_field-wrapper"><label for="field-3" class="form_hidden-label">Repeat Password</label><input class="form_input w-input" maxlength="256" name="field-3" data-name="Field 3" placeholder="Repeat Password" li-attribute:name="customer[password_confirmation]" type="password" id="field-3" required=""></div>
                  <div class="button-group"><input type="submit" data-wait="" class="button max-width-full w-button" value="Activate"><input type="submit" data-wait="" li-attribute:name="decline" class="button is-outline max-width-full w-button" value="Refuse"></div>
                </form>
                <div class="w-form-done">
                  <div>Thank you! Your submission has been received!</div>
                </div>
                <div class="w-form-fail">
                  <div>Oops! Something went wrong while submitting the form.</div>
                </div>
              </div>
            </div>
          </div>
        </div>
       {% schema %} {
    "tag": "section",
    "name": "Activate-Account",
    "class": "section_newsletter",
    "settings": [
        {
            "id": "text_activate_account",
            "type": "text",
            "label": "Activate Account",
            "default": "Activate Account"
        }
    ],
    "presets": [
        {
            "name": "Activate-Account",
            "category": "Liquify",
            "blocks": []
        }
    ]
} {% endschema %}